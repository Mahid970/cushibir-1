---
import { Icon } from "astro-icon/components";
const {id, title, text, bgAndTextColor }= Astro.props
---

<div class=`${bgAndTextColor} rounded h-78 px-8 py-4`>
    

    <h2 class="text-2xl font-semibold ">{title}</h2>
    <div class="h-1 bg-amber-50 my-3"></div>
    <Icon size="42px" name="mdi:format-quote-open"></Icon>
    <p class="mx-8 text-center text-xl">{text}</p>
   <div class=" w-full flex justify-end">
    <Icon class="" size="42px" name="mdi:format-quote-close"></Icon>
   </div>
</div>

