---
import FiveDofa from "./FiveDofa.astro";
import LokkhoUddessho from "./LokkhoUddessho.astro";
const dofas = [
  {
    id: "dofa-001",
    title: "দাওয়াত",
    text: "তরুণ ছাত্রসমাজের কাছে ইসলামের আহ্বান পৌঁছিয়ে তাদের মাঝে ইসলামী জ্ঞান অর্জন এবং বাস্তব জীবনে ইসলামের পূর্ণ অনুশীলনের দায়িত্বানুভূতি জাগ্রত করা।",
    bgAndTextColor: "text-white bg-[#1abc9c]",
  },
  {
    id: "dofa-002",
    title: "সংগঠন",
    text: "যে সব ছাত্র ইসলামী জীবনবিধান প্রতিষ্ঠার সংগ্রামে অংশ নিতে প্রস্তুত তাদেরকে সংগঠনের অধীনে সংঘবদ্ধ করা।",
    bgAndTextColor: "text-white bg-[#1F7D53]",
  
  },
  {
    id: "dofa-003",
    title: "প্রশিক্ষণ",
    text: "এই সংগঠনের অধীনে সংঘবদ্ধ ছাত্রদেরকে ইসলামী জ্ঞান প্রদান এবং আদর্শ চরিত্রবানরূপে গড়ে তুলে জাহেলিয়াতের সমস্ত চ্যালেঞ্জের মোকাবেলায় ইসলামের শ্রেষ্ঠত্ব প্রমাণ করার যোগ্যতাসম্পন্ন কর্মী হিসেবে গড়ার কার্যকরী ব্যবস্থা করা।",
    bgAndTextColor: "text-white bg-[#255F38]",
  
  },
  {
    id: "dofa-004",
    title: "ইসলামী শিক্ষা আন্দোলন ও ছাত্রসমস্যার সমাধান",
    text: "আদর্শ নাগরিক তৈরীর উদ্দেশ্যে ইসলামী মূল্যবোধের ভিত্তিতে শিক্ষাব্যবস্থার পরিবর্তন সাধনের দাবিতে সংগ্রাম এবং ছাত্রসমাজের প্রকৃত সমস্যা সমাধানের সংগ্রামে নেতৃত্ব প্রদান।",
    bgAndTextColor: "text-white bg-[#626F47]",
    
  },
  {
    id: "dofa-005",
    title: "ইসলামী সমাজ বিনির্মাণ",
    text: "অর্থনৈতিক শোষণ, রাজনৈতিক নিপীড়ন এবং সাংস্কৃতিক গোলামী হতে মানবতার মুক্তির জন্য ইসলামী সমাজ বিনির্মাণে সর্বাত্মক প্রচেষ্টা চালানো।",
    bgAndTextColor: "text-white bg-[#03A791]",
    
  }
];

---

<div class=" my-12 bg-secondary pb-12  ">
    
    
    <div class="flex  mx-24  justify-center gap-12 ">
        <div class="flex-1/2 ">
          <h1 class="text-4xl text-center  sticky top-22 my-6 font-semibold text-primary">লক্ষ্য ও উদ্দেশ্য</h1>
           <LokkhoUddessho></LokkhoUddessho>
          </div>
         <div class="flex-1/2 ">
            <h1 class="text-4xl sticky text-center top-22 my-6 font-semibold text-[#1abc9c]">৫ দফা কর্মসূচি</h1>
          <div class=" flex  flex-col dofa-container gap-4">
            {dofas.map(dofa=><div id={dofa.id} class="dofa">
              <FiveDofa  title={dofa.title} 
              text={dofa.text} bgAndTextColor={dofa.bgAndTextColor} >       
              </FiveDofa>
            </div>)}
          </div>
        </div>
     </div>
     
</div>



<style>
 .dofa-container {
  --total-cards: 5;
  --card-height: calc(100% / var(--total-cards));
 view-timeline-name: --cardsContainer;
 }
  .dofa{
    
    transform-origin: top center;
    position: sticky;
    top: calc(130px + var(--index)*14px);
    animation: stacking linear forwards;
    animation-timeline: --cardsContainer;
    animation-range-start: exit-crossing calc((var(--card-height)* (var(--index) - 1)) - 130px);
    animation-range-end: exit-crossing calc((var(--card-height)* var(--index)) - 130px);
  }
  @keyframes stacking{
    to{
      transform: scale( calc(1 - 0.08 * (var(--total-cards) - var(--index)) ));
    }
  }
  #dofa-001{
    --index: 1; 
  }
  
  #dofa-002{
    --index: 2; 
  }
  #dofa-003{
    --index: 3;
  }
  #dofa-004{
    --index: 4;
  }
  #dofa-005{
    --index: 5;
  }

</style>


