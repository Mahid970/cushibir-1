---
import { Icon } from 'astro-icon/components'
import PrimaryButton from '../../buttons/PrimaryButton.astro'
---

<div class="flex justify-end items-center mx-12 my-2">
  <div class="flex py-2 px-8 gap-4 rounded-2xl ">
    
  
    <a href="https://www.youtube.com/@cushibir77" target="_blank" class="socialContainer rounded bg-[#1877F2]  p-1 containerone">
      <Icon class="socialSvg text-white  " size='22px' name="bxl:facebook"></Icon>
    </a>
    <a href="https://www.youtube.com/@cushibir77" target="_blank" class="socialContainer rounded bg-[#ff0022]  p-1 containerTwo">
      <Icon class="socialSvg text-white  " size='22px' name="bxl:youtube"></Icon>
    </a>
    <a href="https://t.me/cushibir" target="_blank" class="socialContainer rounded  bg-[#44b2ea] p-1 containerThree">
      <Icon class="socialSvg text-white  " size='22px' name="bxl:telegram"></Icon>
    </a>
  
   
  </div>
 
   <PrimaryButton bg="bg-primary"></PrimaryButton>
  
      

</div>

<style>

.socialContainer {
  width: 28px;
  height: 28px;

  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  transition-duration: 0.3s;
}

.socialContainer:hover {
  
  transition-duration: 0.3s;
  transform: scale(1.4);
  
}
/* Whatsapp*/


.socialContainer:active {
  transform: scale(0.9);
  transition-duration: 0.3s;
}


.socialContainer:hover .socialSvg {
  animation: slide-in-top 0.6s both;
}

@keyframes slide-in-top {
  0% {
    transform: translateY(50px);
    opacity: 0;
  }

  100% {
    transform: translateY(0);
    opacity: 1;
  }
}

</style>